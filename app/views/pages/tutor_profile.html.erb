<%= form_with model: @tutor, local: true, url: "/edit-profile", html: { multipart: true } do |f| %>


<br>
<div class="field">
  <%= f.label 'profile headline' %><br>
  <%= f.text_area :headline %>
</div>

<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description, id: :description %>
</div>

<div class="field">
  <%= f.label :hourly_rate, "Hourly_Rate ($)" %><br>
  <%= f.text_field :hourly_rate %>
</div>
<br>

<br>
<div class="field">
  <%= f.label "Upload Profle Photo" %><br>
  <%= f.file_field :avatar %><br>
</div>

<div class="actions">
  <%= f.submit class: 'btn btn-primary' %><br>
</div>

<% end %>
