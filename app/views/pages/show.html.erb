<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <% if user_signed_in? and @user.tutor == current_user.tutor %>
  <h6><%= link_to 'Do you need to Edit Your Profile?', "/edit-profile" %></h6><br>
  <% end %>

  <p><strong>Profile Avatar:</strong></p>
  <%= image_tag @image%>


  <p>
    <strong>Profile Headline:</strong>
    <%= @headline %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @description %>
  </p>

  <p>
    <strong>Hourly Rate: </strong>
    <%= @hourly_rate %>
  </p>

  <p>
    <strong>Skills: </strong><br>
    <% @skills.each do |skill| %>
    <%= skill.name %>

    <% end %>  </p>

    <% if user_signed_in? %>
      <%= link_to t(".contact", :default => t("helpers.links.contact_tutor")), conversations_path(sender_id: current_user.id, recipient_id: @user.id), :method => 'post', :class => 'btn btn-primary' %>
    <% end %>

    <% if user_signed_in? and @user.tutor == current_user.tutor %>
      <h6><%= link_to 'Do you want to Bump Up Your Profile', "/charges/new"%></h6><br>
    <% end %>



</div>
